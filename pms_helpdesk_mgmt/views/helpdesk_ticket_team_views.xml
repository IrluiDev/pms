<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pms_ticket_view_team_form" model="ir.ui.view">
        <field name="name">pms.helpdesk.ticket.team.form</field>
        <field name="model">helpdesk.ticket.team</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_team_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="before">
                <field name="category_ids" widget="many2many_tags" />
                <field name="tag_ids" widget="many2many_tags" />
            </xpath>
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="pms_view_helpdesk_team_tree" model="ir.ui.view">
        <field name="name">pms.helpdesk.ticket.team.tree</field>
        <field name="model">helpdesk.ticket.team</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_team_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_ids']" position="after">
                <field name="tag_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
</odoo>
